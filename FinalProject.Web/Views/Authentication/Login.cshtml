@model FinalProject.Web.Models.ViewModels.Authentication.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0">Welcome Back!</h3>
                </div>
                <div class="card-body p-5">
                    <div class="text-center mb-2">
                        <p class="text-muted">Please sign in to your account</p>
                    </div>

                    <form asp-controller="Authentication" asp-action="Login" method="post">
                        <div class="form-floating mb-4">
                            <input asp-for="Email" type="text" class="form-control" id="email"
                                placeholder="name@example.com" asp-for="Email" value="@Model.Email">
                            <label asp-for="Email">Email</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" type="password" class="form-control" id="password"
                                placeholder="Password" asp-for="Password" value="@Model.Password">
                            <label asp-for="Password">Password</label>
                        </div>

                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="text-danger mb-4">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                    <div class="alert alert-danger py-2 mb-2" role="alert">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                            <path fill="currentColor" fill-rule="evenodd"
                                                d="M5.312 10.762C8.23 5.587 9.689 3 12 3s3.77 2.587 6.688 7.762l.364.644c2.425 4.3 3.638 6.45 2.542 8.022S17.786 21 12.364 21h-.728c-5.422 0-8.134 0-9.23-1.572s.117-3.722 2.542-8.022zM12 7.25a.75.75 0 0 1 .75.75v5a.75.75 0 0 1-1.5 0V8a.75.75 0 0 1 .75-.75M12 17a1 1 0 1 0 0-2a1 1 0 0 0 0 2"
                                                clip-rule="evenodd" />
                                        </svg>
                                        <span class="ms-2">
                                            @error.ErrorMessage
                                        </span>
                                    </div>
                            }
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                <span class="text-muted">Don't have an account?</span>
                                <a asp-controller="Authentication" asp-action="Register"
                                    class="text-primary fw-bold text-decoration-none">Register now</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>